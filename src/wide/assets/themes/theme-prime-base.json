			"padding":[4]
		},
		
		"TextField":{
			"font":"normal",
			"padding":[ 4 ],
			"margin":[ 2 ],
			"backgroundColor":"darker"
		},
		
		"DockingView":{
		},
		
		"DockedView":{
		},
		
