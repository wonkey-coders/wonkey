			"extends":"ToolBar",
			"padding":[ 0,0,0,0 ],
			"backgroundColor":"bright"
		},
		
		"TabButton":{
            "backgroundColor":"brighter",
			"extends":"Button",
			"font":"small",
			"padding":[14,12,14,12],
			"border":[0,0,0,4],
			"borderColor":"accentDark",
			"textColor":"text-background",
			"states":{
				"hover":{
					"textColor":"text-default"
				},
				"active":{
					"textColor":"text-default"
				},
