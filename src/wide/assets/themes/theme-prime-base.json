			"extends":"TabButton",
			"borderColor":"textview-color4"
		},
		
		"TabClose":{
			"margin":[32,0,0,0 ],
			"icons":"prime_assets/prime_tabclose_icons.png",
			"iconColor":"text-disabled",
			"states":{
				"hover":{
					"iconColor":"accent"
				},
				"active":{
					"iconColor":"accent"
				}
			}
		},
		
		"TableView":{
			"extends":"DockingView"
		},
		
