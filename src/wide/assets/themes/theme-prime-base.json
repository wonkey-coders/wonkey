		"MainToolBar":{
			"extends":"ToolBarExt"
		},

		"EditorToolBar":{
			"extends":"ToolBarExt"
		},

		"SourceToolBar":{
			"extends":"ToolBarExt"
		},

		"ToolButton":{
			"extends":"Button",
			"backgroundColor":"dark",
			"padding":[ 4,4 ],
			"margin":[ 2,2 ],

			"states":{
				"hover":{
					"backgroundColor":"bright"
				},
				"active":{
					"backgroundColor":"brighter"
				},
				"selected":{
					"backgroundColor":"brighter"
				}
			}
		},

		"TabViewArrowPrev":{
			"extends":"Button",
			"padding":[ 8,4 ],
			"margin":[ 2,0,2,0 ]
		},

		"TabViewArrowNext":{
			"extends":"Button",
			"padding":[ 8,4 ],
			"margin":[ 2,0,12,0 ]
		},

		"ProgressBar":{
			"iconColor":"accent",
			"icons":"prime_assets/prime_progressbar_icons.png"
		},

		"StatusBar":{
			"extends":"DockingView",
			"padding":[ 0,8,0,8 ],
			"backgroundColor":"statusbar"
		},
