			"extends":"TreeView"
		},
		
		"HtmlView":{
		},
		
		"Console":{
			"backgroundColor":"dark"
		},
		
		"Dialog":{
			"skin":"prime_assets/prime_dialog_skin.png",
			"skinColor":"bright"
		},
		
