		"ScrollView":{
		},
		
		"ScrollBar":{
			"backgroundColor":"bright"
		},
		
		"ScrollKnob":{
			"padding":[ 6 ],
			"border":[ 0 ],
			"backgroundColor":"brightest",
			"states":{
				"hover":{
					"backgroundColor":"brighter"
				},
				"active":{
					"backgroundColor":"brightest"
				}
			}
		},
		
		"TextView":{
			"font":"editor",
			"textColor":"textview-color7",
			"backgroundColor":"dark"
		},
		
