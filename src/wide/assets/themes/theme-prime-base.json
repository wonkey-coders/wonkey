			"padding":[8,4]
		},
		
		"Button":{
			"extends":"Label",
			"padding":[4,2],
			"backgroundColor":"darker",
			
			"states":{
				"hover":{
					"textColor":"accent",
					"backgroundColor":"dark"
				},
				"active":{
					"textColor":"accent",
